version: "3"

services:
  vpn:
    image: kyleaffolder/mullvad-wg-docker
    container_name: vpn
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
    environment:
      - ACCOUNT=1234567890123456
      - PRIVATE_KEY=ZjFh6O7479S177JV8ZCyZM6N5XfqOJAyFy8AxLhdjyp=
      - SERVER_LOCATION=se
      - LOCAL_SUBNETS=10.1.0.0/16,10.2.0.0/16,10.3.0.0/16
    # volumes:
    #   - /lib/modules:/lib/modules:ro
    ports:
      - 8080:8080 # example for LinuxServer qbittorrent
    sysctls:
      - net.ipv4.conf.all.src_valid_mark=1
      - net.ipv6.conf.all.disable_ipv6=0
    restart: unless-stopped

  qbittorrent:
    image: lscr.io/linuxserver/qbittorrent
    container_name: qbittorrent
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/Stockholm
      - WEBUI_PORT=8080
    volumes:
      - ./qbit/config:/config
      - ./qbit/downloads:/downloads
    restart: unless-stopped
    network_mode: service:vpn
    depends_on:
      - vpn